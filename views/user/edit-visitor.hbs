<main class="content">
  <div class="form edit-visitor">
    <h1>MODIFIER MON COMPTE</h1>
    {{#if validationMessage}}

    {{#if errorMessage}}
    <p class="error-message">{{errorMessage}}</p>
    {{/if}}
    <p class="validation-message">{{validationMessage}}</p>
    {{/if}}
    <form action='/edit/{{user.id}}' method="POST" enctype="multipart/form-data" id="createAccountForm">
      <div id="user-form">
        <label class="field">Prénom *<input type='text' name="firstName" value="{{user.firstName}}" required></label>
        <label class="field">Nom *<input type='text' name="lastName" value="{{user.lastName}}" required></label>
        <label class="field">Nom d'utilisateur *<input type='text' name="userName" value="{{user.userName}}" required></label>
        <label class="field">Email *<input type='email' name="email" value="{{user.email}}" required></label>
        <label class="field">Mot de passe *<input type='password' name="password" value="{{user.password}}"
            placeholder="**********" required></label>
        <label class="field">Photo de profil<input type="file" name="profilePic" class="upload"
            value={{user.profilePic}} required /></label>
      </div>

      <button class="btn primary">Mettre à jour</button>
      <p class="mandatory">* CHAMPS REQUIS</p>
    </form>
  </div>
</main>