<main class="content">
  <div class="form visitor-profile">
    <h1>Bienvenue, {{ user.firstName }} {{ user.lastName }}</h1>
    <div id="user-profile">
      <img class="profile-pic" src="{{user.profilePic}}">
      <p class="field">Prénom : <span>{{user.firstName}}</span></p>
      <p class="field">Nom : <span>{{user.lastName}}</span></p>
      <p class="field">Nom d'utilisateur : <span>{{user.userName}}</span></p>
      <p class="field">Email : <span>{{user.email}}</span></p>
      <div id="btn"><a href="/edit/{{user.id}}" class="btn primary">Mettre à jour</button>
          <a href="/user/{{user.id}}/delete" class="btn primary">Supprimer</a></div>
    </div>
    <form action="/logout" method="GET" class="logout">
      <button class="btn">Se déconnecter</button>
    </form>
  </div>
</main>